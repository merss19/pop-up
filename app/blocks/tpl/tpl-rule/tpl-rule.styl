	&__inner
		overflow: auto;
		position: absolute;
		padding: 10px 15px;
		top: 0;
		left: 0;
		right: 0;
		bottom: 60px;

	&__header
		font-size: 16px;
		line-height: 16px;


	&__box
		border:1px solid colorAdd
		height: 80px;
		width: 100%;
		margin-bottom: 0;


	&__notice
		float: right;
		color: colorBorder;


	&__bottom
		position: absolute;
		background: #fff;
		padding: 12px;
		width: 100%;
		text-align: center;
		border-top: 1px solid #e5e5e5;
		left: 0;
		right: 0;
		bottom: 1px;


	&__arrow
		content: '';
		display: block;
		position: absolute;
		top: 18px;
		width: 15px;
		height: 15px;
		border-right: 1px solid #DDD;
		border-bottom: 1px solid #DDD;
		-webkit-transform: rotate(-45deg);
		-moz-transform: rotate(-45deg);
		-o-transform: rotate(-45deg);
		transform: rotate(135deg);
		left: -8px;
		background: #fff