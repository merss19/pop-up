.action-rule
	border: 1px solid colorBorder
	color: colorText

	&__item
		float: left;
		padding:5px;

	&__label
		float: left;
		padding: 3px 12px 0;
		line-height: 26px;
		font-size:16px;

	&__input
		margin-bottom: 0;
		height: 30px;
		width: 50px;
		margin-top: 2px;
		text-align: center;
		border: 1px solid colorAdd ;
		border-radius: borderRadius;

	&__close
		float: right;
		padding: 12px 20px;
		cursor: pointer;

	&__trigger
		width: 30px
		height: 30px
		float: left
		cursor: pointer

		&:before
			content: ''
			width: 12px;
			margin: auto;
			display: inline-block;
			height: 12px;
			margin-top: 10px;
			border-right: 1px solid #0d316d;
			border-bottom: 1px solid #0d316d;
			transform: rotate(-45deg);
			margin-left: 12px;

	&__collapse
		float: left
		width: 100%
		box-shadow: inset 0 3px 10px -5px rgba(0,0,0, 0.5)
.add-action
	padding: 12px 8px

.action-list
	display: none

.action-table
	.table-cell
		border:1px solid colorBorder
		padding:8px
		vertical-align: middle;

		&:first-child
			border-left none

		&:last-child
			border-right none

	&__icons
		width: 86px;

	&__icon
		display: inline-block
		padding:0 8px
		cursor: pointer

.action-desc
	position: absolute;
	display: none
	top: 0;
	bottom: -68px;
	left: 29%;
	right: 2px;
	box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
	border-radius: 5px;
	background-color: #fff;
	padding: 10px;
	z-index: 1;
	margin-right: -1px;

